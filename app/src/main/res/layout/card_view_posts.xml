<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Buttons -->

        <include
            android:id="@+id/contentPanel"
            layout="@layout/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/buttonPanel"
            android:orientation="vertical"
            />

        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_alignTop="@+id/contentPanel"
            android:layout_alignParentStart="true">

            <com.google.android.material.button.MaterialButton
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/like_button_states" />

            <com.google.android.material.button.MaterialButton
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                app:icon="@drawable/like_button_states" />

        </LinearLayout>
        <!-- Media -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="194dp"
            android:layout_below="@+id/contentPanel"
            android:contentDescription="@string/common_open_on_phone"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/oregano"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>